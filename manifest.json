{
	"name": "Checkvist TimeCalc",
	"description": "Totals any child list items with tags matching hrs-nn (e.g. hrs-8) and applies appropriate hrs tags to parent items. Useful for using Checkvist for basic project estimates.",
  "version": "1.0",
  "background": { "scripts": ["background.js"] },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
	"options_page": "options.html", 
  "content_scripts": [
    {
      "matches": [
				"http://www.checkvist.com/*", 
				"https://www.checkvist.com/*", 
				"http://beta.checkvist.com/*", 
				"https://beta.checkvist.com/*"
			],
      "js": ["jquery.js", "default_options.js", "content_script.js"]
    }
  ],
  "browser_action": {
    "default_title": "Checkvist time estimate",
    "default_icon": "icon.png"
  },
  "manifest_version": 2, 
   "icons":{
       "128":"icon_50.png"
   }
}
